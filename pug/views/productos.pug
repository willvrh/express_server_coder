html
    head 
        title="Titulo"
        link(rel="stylesheet" type="text/css" href="/css/styles.css")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body(class="m-4")

        input(class="btn btn-primary" type="button" onclick="location.href='/'" value="Registrar un producto")
        h2(class="mt-3")="Listado de productos"

        if products 
            table(class="table table-dark mt-3")
                thead
                    tr
                        th(scope="col")="Nombre"
                        th(scope="col")="Precio"
                        th(scope="col")="Foto"
                tbody
                    each product in products
                        tr
                            td=product.title
                            td=product.price
                            td 
                                img(src=product.thumbnail)
        else 
            div(class="alert alert-warning" role="alert")="No se encontraron productos"
                        


            

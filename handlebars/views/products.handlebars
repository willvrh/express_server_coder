<input class="btn btn-primary" type="button" onclick="location.href='/'" value="Registrar un producto">

<h2 class="mt-3">Listado de productos</h2>

    {{#if products}}
        <table class="table table-dark mt-3">
            <thead>
                <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
                </tr>
            </thead>
            <tbody>
                
                    {{#each products}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td>${{this.price}}</td>
                        <td><img src={{this.thumbnail}}></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <div class="alert alert-warning" role="alert">
            No se encontraron productos
        </div>
    {{/if}}
    
    
</div>
